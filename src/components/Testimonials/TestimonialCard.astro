---
import { Image } from "astro:assets";

// data
import { type TestimonialItem } from "@config/types/configDataTypes";

interface Props extends TestimonialItem {
  rest?: any; // catch-all for any additional parameters, such as "aria-label"
}

const { avatar, name, title, testimonial, ...rest } = Astro.props as Props;
---

<div
  class="rounded-2xl border border-base-300 bg-base-200/50 p-4 dark:border-base-600/60 dark:bg-base-800/50"
  {...rest}
>
  <div class="mx-auto w-full">
    <div class="mr-auto flex items-center gap-6">
      <!-- <div class="h-12 w-12 shrink-0 overflow-hidden rounded-full">
        <Image
          src={avatar}
          alt={name}
          width={100}
          class="h-full object-cover"
        />
      </div> -->
      <div>
        <h3 class="text-lg font-medium">{name}</h3>
        <p class="text-sm opacity-900 dark:opacity-80">
          {title}
        </p>
      </div>
    </div>
    <p class="mt-4 text-sm lg:text-base dark:text-white dark:opacity-80">
      {testimonial}
    </p>
  </div>
</div>
